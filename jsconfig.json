{
    "baseUrl": ".",
    "include": ["src/**/*", "tests/**/*"],
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es6",
        "module": "es6",
        "paths": {
            "@/*": ["./*"],
            "@": ["./index.js", "./index.json", "./index.vue", "./index.scss", "./index.css"],
            "@src/*": ["src/*"],
            "@src": ["src/index.js", "src/index.json", "src/index.vue", "src/index.scss", "src/index.css"],
            "@router/*": ["src/router/*"],
            "@router": [
                "src/router/index.js",
                "src/router/index.json",
                "src/router/index.vue",
                "src/router/index.scss",
                "src/router/index.css"
            ],
            "@views/*": ["src/pages/*"],
            "@views": [
                "src/pages/index.js",
                "src/pages/index.json",
                "src/pages/index.vue",
                "src/pages/index.scss",
                "src/pages/index.css"
            ],
            "@layouts/*": ["src/layouts/*"],
            "@layouts": [
                "src/layouts/index.js",
                "src/layouts/index.json",
                "src/layouts/index.vue",
                "src/layouts/index.scss",
                "src/layouts/index.css"
            ],
            "@components/*": ["src/components/*"],
            "@components": [
                "src/components/index.js",
                "src/components/index.json",
                "src/components/index.vue",
                "src/components/index.scss",
                "src/components/index.css"
            ],
            "@assets/*": ["src/assets/*"],
            "@assets": [
                "src/assets/index.js",
                "src/assets/index.json",
                "src/assets/index.vue",
                "src/assets/index.scss",
                "src/assets/index.css"
            ],
            "@utils/*": ["src/utils/*"],
            "@utils": [
                "src/utils/index.js",
                "src/utils/index.json",
                "src/utils/index.vue",
                "src/utils/index.scss",
                "src/utils/index.css"
            ],
            "@state/*": ["src/state/*"],
            "@state": [
                "src/state/index.js",
                "src/state/index.json",
                "src/state/index.vue",
                "src/state/index.scss",
                "src/state/index.css"
            ],
            "@design/*": ["src/design/scss/*"],
            "@design": [
                "src/design/scss/index.js",
                "src/design/scss/index.json",
                "src/design/scss/index.vue",
                "src/design/scss/index.scss",
                "src/design/scss/index.css"
            ],
            "@mixins/*": ["src/mixins/*"],
            "@mixins": [
                "src/mixins/index.js",
                "src/mixins/index.json",
                "src/mixins/index.vue",
                "src/mixins/index.scss",
                "src/mixins/index.css"
            ],
            "@services/*": ["src/services/*"],
            "@services": [
                "src/services/index.js",
                "src/services/index.json",
                "src/services/index.vue",
                "src/services/index.scss",
                "src/services/index.css"
            ],
            "@filters/*": ["src/filters/*"],
            "@filters": [
                "src/filters/index.js",
                "src/filters/index.json",
                "src/filters/index.vue",
                "src/filters/index.scss",
                "src/filters/index.css"
            ],
            "@pages/*": ["src/pages/*"],
            "@pages": [
                "src/pages/index.js",
                "src/pages/index.json",
                "src/pages/index.vue",
                "src/pages/index.scss",
                "src/pages/index.css"
            ]
        }
    }
}
